{
    "standalone": {
        "wrap": true,
        "global": true,
        "target": "dist/metaphorjs.namespace.js",
        "files": [
            "../metaphorjs/src/MetaphorJs.js",
            ["src/metaphorjs.namespace.js", {"as": "Namespace"}]
        ],
        "expose": [
            ["MetaphorJs.lib", "Namespace"]
        ]
    },

    "npm": {
        "target": "dist/metaphorjs.namespace.npm.js",
        "files": [
            ["src/metaphorjs.namespace.js", {"keepExports": true}]
        ]
    },

    "amd": {
        "target": "dist/metaphorjs.namespace.amd.js",
        "files": [
            "src/metaphorjs.namespace.js"
        ],
        "define": {
            "name": "metaphorjs-namespace",
            "return": "Namespace"
        }
    },

    "compile-standalone": {
        "target": "dist/metaphorjs.namespace.min.js",
        "compile": "standalone"
    },

    "compile-amd": {
        "target": "dist/metaphorjs.namespace.amd.min.js",
        "compile": "amd"
    }
}