{
    "version": "1.0.4",
    "description": "MetaphorJs namespace system",


    "test": {
        "cmd": "mocha"
    },
    "push": [
        "github"
    ],


    "docs": {
        "": {
            "out": "docs",
            "renderer": "default",
            "hooks": "hooks",
            "src": [
                "../metaphorjs/src/lib/Cache.js",
                "src/**"
            ],
            "includeExternal": false,
            "data": {
                "title": "MetaphorJs.Namespace",
                "version": "v@{version}"
            }
        }
    },

    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.namespace.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                [
                    "src/metaphorjs.namespace.js",
                    {
                        "as": "Namespace"
                    }
                ]
            ],
            "expose": [
                "Namespace"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.namespace.npm.js",
            "compile": false,
            "files": [
                [
                    "src/metaphorjs.namespace.js",
                    {
                        "keepExports": true
                    }
                ]
            ]
        },
        "amd": {
            "target": "dist/metaphorjs.namespace.amd.js",
            "files": [
                "src/metaphorjs.namespace.js"
            ],
            "define": {
                "name": "metaphorjs-namespace",
                "return": "Namespace"
            }
        }
    }
}